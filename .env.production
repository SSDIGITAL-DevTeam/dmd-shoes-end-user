# =========================
# ✅ APP SETTINGS
# =========================
NODE_ENV=production
NEXT_PUBLIC_SITE_NAME="DMD Shoes"
NEXT_PUBLIC_SITE_URL=https://dmdshoeparts.com

# =========================
# ✅ API CONFIG
# =========================
# Base URL ke Laravel API
NEXT_PUBLIC_API_URL=https://api.dmdshoeparts.com/api/v1

# Base URL ke asset (gambar, file)
NEXT_PUBLIC_ASSET_URL=https://api.dmdshoeparts.com/storage

# Opsional (untuk kompatibilitas Vite/React Query)
VITE_API_BASE_URL=https://api.dmdshoeparts.com/api/v1
VITE_ASSET_BASE_URL=https://api.dmdshoeparts.com/storage

# =========================
# ✅ FEATURE FLAGS
# =========================
NEXT_PUBLIC_ENABLE_I18N=true
NEXT_PUBLIC_DEFAULT_LANG=id
NEXT_PUBLIC_SUPPORTED_LANGS=id,en

# =========================
# ✅ SECURITY / ENVIRONMENT
# =========================
NEXT_PUBLIC_ENV=production
NEXT_TELEMETRY_DISABLED=1
